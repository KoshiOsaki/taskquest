{
  "compilerOptions": {
    // Base options for the entire monorepo
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noEmit": true,

    // Path alias for editor intellisense
    "paths": {
      "@/*": ["./next-pwa/src/*"]
    }
  },
  "exclude": ["node_modules"]
}
