{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    // Next.js requires this plugin
    "plugins": [
      {
        "name": "next"
      }
    ],
    // Path alias for imports
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
